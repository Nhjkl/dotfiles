#! /usr/bin/env bash

session=$(find ~ ~/.local/learn ~/.local/ac-work ~/.local/work ~/.local/src -mindepth 1 -maxdepth 1 -type d | sed -e 1a\/home/lx | fzf)

if [[ $session != "" ]]; then
  dir_name=$(basename $(dirname "$session") | tr . _)
  file_name=$(basename "$session" | tr . _)

  session_name=$dir_nameïƒ§$file_name

  if ! tmux has-session -t "$session_name" 2> /dev/null; then
    tmux new-session -s "$session_name" -c "$session" -d
  fi

  if ! tmux switch-client -t "$session_name" 2> /dev/null; then
    tmux a
  else
    tmux switch-client -t "$session_name"
  fi
fi

