#!/usr/bin/env bash
dir="$HOME/.config/rofi/launchers/text"
theme="style_7"

# rofi -show drun -sorting-method fzf -sort

chosen=$(
	cd ~/.local/work
	ls -d */ | rofi -dmenu -p "Project" -theme $dir/"$theme"
)

base=$(
	cd ~/.local/ac-work
	pwd
)

# Exit if none chosen.
[ -z "$chosen" ] && exit

# alacritty -t "îŸ… (nvim) - $chosen" -e $SHELL -c "cd $base/$chosen; sleep 0.1; nvim; $SHELL"
code $base/$chosen

exit 0
